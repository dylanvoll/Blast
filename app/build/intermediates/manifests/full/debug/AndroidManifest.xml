<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.dylan.blast"
    android:versionCode="2"
    android:versionName="1.1"
    android:windowSoftInputMode="adjustPan" >

    <uses-sdk
        android:minSdkVersion="21"
        android:targetSdkVersion="24" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <!-- <uses-permission android:name="android.permission.READ_PHONE_STATE" /> -->
    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:theme="@style/MyTheme" >
        <activity
            android:name="com.dylan.blast.Blast_Login"
            android:label="@string/title_activity_blast__login"
            android:screenOrientation="portrait"
            android:theme="@style/MyAppTheme" >
        </activity>
        <activity
            android:name="com.dylan.blast.Blast_Home"
            android:label="@string/title_activity_blast__home"
            android:screenOrientation="portrait"
            android:theme="@style/MyAppTheme" >
        </activity>
        <activity
            android:name="com.dylan.blast.Edit_Song_For_Post"
            android:label="@string/title_activity_edit__song__for__post"
            android:screenOrientation="portrait"
            android:theme="@style/MyAppTheme"
            android:windowSoftInputMode="adjustPan" >
        </activity>
        <activity
            android:name="com.dylan.blast.Register_User"
            android:label="@string/title_activity_register_user"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme" >
        </activity>
        <activity
            android:name="com.dylan.blast.PostActivity"
            android:label="@string/title_activity_post"
            android:screenOrientation="portrait"
            android:theme="@style/MyAppTheme"
            android:windowSoftInputMode="adjustPan" >
        </activity>
        <activity
            android:name="com.dylan.blast.User_Profile"
            android:label="@string/title_activity_user__profile"
            android:screenOrientation="portrait"
            android:theme="@style/MyAppTheme" >
        </activity>
        <activity
            android:name="com.dylan.blast.Search_Users"
            android:label="@string/title_activity_search__users"
            android:screenOrientation="portrait"
            android:theme="@style/MyAppTheme" >
        </activity>
        <activity
            android:name="com.dylan.blast.Launcher_Activity"
            android:label="@string/title_activity_launcher_"
            android:screenOrientation="portrait"
            android:theme="@style/AppBaseTheme" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.dylan.blast.ProfileActivity"
            android:label="@string/title_activity_profile"
            android:screenOrientation="portrait"
            android:theme="@style/MyAppTheme" >
        </activity>
        <activity
            android:name="com.dylan.blast.TrailingView"
            android:label="@string/title_activity_trailing_view"
            android:screenOrientation="portrait"
            android:theme="@style/MyAppTheme" >
        </activity>
    </application>

</manifest>